<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_author_table" author="Daniil Molchanov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="author"/>
            </not>
        </preConditions>
        <createTable tableName="author">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="varchar(255)"/>
            <column name="position_id" type="varchar(50)">
                <constraints foreignKeyName="fk_author_position" references="position(id)" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>